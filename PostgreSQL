pipeline {
agent any

stages {
stage('Installation') {
steps {
script {
try {
def packageName = input(
message: 'Enter the package name for PostgreSQL:',
parameters: [string(
name: 'packageName',
defaultValue: '',
description: 'Package name for PostgreSQL'
)]
)
sh "sudo apt-get update"
sh "sudo apt-get install -y $packageName"
} catch (err) {
println("Error: ${err}")
}
}
}
}
}
}
